<!--miniprogram/pages/zhongyi/index.wxml-->
<input class="m-input" value="{{name}}" auto-focus placeholder="姓名" bindinput="bindNameInput"/>
<input class="m-input" type="number" value="{{mobile}}" maxlength="11" placeholder="电话" bindinput="bindMobileInput"/>
<view class="m-input">
  <picker mode="date" value="{{date}}" bindchange="bindDateChange">
    <view class="picker">
      预约日期： {{date}}
    </view>
  </picker>
</view>
<view class="m-input">
  <picker mode="time" value="{{time}}" bindchange="bindTimeChange">
    <view class="picker">
      预约时间： {{time}}
    </view>
  </picker>
</view>
<button type="primary" class="btn" bindtap="submit">提交</button>
